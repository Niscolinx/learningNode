<%- include('../includes/head.ejs') %>

</head>

<body>
    <div class="container">

        <%- include('../includes/navigation.ejs') %>

        <main class="main">
            <div class="cart-layout">
            <% if(cart.length > 0) { %>
                <div class="center center__col">
                    <h1>My Cart</h1>
                    <p>List of all the cart items...</p>
                </div>
                <h2 class="center">The total price is $<%=totalPrice%></h2>
                <div class="grid">
                    <% for(let item of cart) { %>
                        <article class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title"><%= item.title%></h1>
                            </header>
                            <div class="card__image">
                                <img src="<%= item.imgUrl %>" alt="A Book">
                            </div>
                            <div class="card__content">
                                <h2 class="product__price">$<%= item.price%></h2>
                            </div>
                            <div class="card__actions">
                                <form method="POST" action="/admin/remove-product">
                                    <input type="hidden" name="cartId" value="<%= item.id %>">

                                    <button class="btn">Delete Item</button>
                                </form>
                            </div>
                         </article>
                    <% } %>
                </div>
                <div class="checkout-btn__box">
                <button class="btn checkout-btn">Proceed to Chckout</button>
                </div>
                <% } else { %>
                    <h2 class="center">No items found in Cart</h2>
                    <% } %>
            </div>
        </main>
    </div>
    <%- include('../includes/end.ejs') %>